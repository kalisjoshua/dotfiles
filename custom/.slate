# More info at - https://github.com/jigish/slate

config defaultToCurrentScreen false

#Layouts


default cinema resolutions:2880x1800;2560x1440
layout cinema 'Google Chrome'           move screenSizeX*2/5;0 screenSizeX*3/5;screenSizeY
layout cinema 'Firefox'                 move screenSizeX*2/5;0 screenSizeX*3/5;screenSizeY

layout cinema 'Terminal'                move screenSizeX*3/5;0 screenSizeX*2/5;screenSizeY
layout cinema 'Atom'                    move 0;0 screenSizeX*3/5;screenSizeY 1
layout cinema 'Messages'                move screenSizeX/4;screenSizeY/2 screenSizeX/4;screenSizeY/2 1

layout cinema 'Microsoft Outlook'       corner top-left resize:.9*screenSizeX;screenSizeY 0
layout cinema 'Microsoft Communicator'  corner top-left resize:300;screenSizeY 0
layout cinema 'Microsoft Lync'          corner top-left resize:300;screenSizeY 0
layout cinema 'Microsoft Teams'         corner top-right resize:.6*screenSizeX;screenSizeY 0
layout cinema 'HipChat'                 corner top-right resize:.6*screenSizeX;screenSizeY 0


default internal resolutions:2880x1800
#layout internal 'Google Chrome'           move 0;0 1280;screenSizeY 0
#layout internal 'Firefox'                 move 0;0 1280;screenSizeY 0
#layout internal 'Terminal'                move screenSizeX*.4;0 screenSizeX*.6;screenSizeY 0
#layout internal 'Atom'                    move screenSizeX*.4;0 screenSizeX*.6;screenSizeY 0
layout internal 'Google Chrome'           move screenSizeX*1/5;0 screenSizeX*4/5;screenSizeY 0
layout internal 'Firefox'                 move screenSizeX*1/5;0 screenSizeX*4/5;screenSizeY 0
layout internal 'Terminal'                move 0;0 screenSizeX*4/5;screenSizeY 0
layout internal 'Atom'                    move 0;0 screenSizeX*4/5;screenSizeY 0
layout internal 'Messages'                move screenSizeX/4;screenSizeY/2 screenSizeX/4;screenSizeY/2 0

layout internal 'Microsoft Outlook'       corner top-right resize:.9*screenSizeX;screenSizeY 0
layout internal 'Microsoft Communicator'  corner top-left resize:300;screenSizeY 0




bind 1:alt;ctrl layout cinema
bind 2:alt;ctrl layout internal
