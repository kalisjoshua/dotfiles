# User Information

[user]
    name = Joshua Kalis
    email = joshuakalis@khanacademy.org
	signingkey = /Users/joshuakalis/.ssh/id_ecdsa.pub

# Custom Aliases

[alias]
	count = rev-list --count HEAD
	graph = log --all --decorate --oneline --graph
	lg = log -F --graph --pretty=format:'%Cgreen%h%Creset -%d %s (%Cgreen%ad%Creset) %ae'
	squash = !sh -c 'git rebase -i $(git merge-base HEAD $1)' -
	who = shortlog -s --
[color]
	ui = auto
[push]
	default = simple
[core]
	excludesfile = ~/.gitignore
[init]
	defaultBranch = main
[pull]
	rebase = true

# Conditional Includes

[includeIf "gitdir:~/Documents/"]
	path = ~/Documents/.gitconfig
[includeIf "gitdir:~/Documents/personal/"]
	path = ~/Documents/personal/.gitconfig-personal
[kaclone]
	email = joshuakalis@khanacademy.org
[gpg]
	format = ssh
[commit]
	gpgsign = true
[gpg "ssh"]
	allowedSignersFile = /Users/joshuakalis/.ssh/allowed_signers
